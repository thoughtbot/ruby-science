<%= simple_form_for(
  @question,
  as: :question,
  url: question_types_path(@question),
  method: :post
) do |form| -%>

  <%= form.hidden_field :submittable_type %>
  <%= render(
    "#{@question.submittable.to_partial_path}_form",
    submittable: @question.submittable,
    form: form
  ) %>
  <%= form.submit 'Change Type' %>
<% end -%>
